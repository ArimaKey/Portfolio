---
import { Image } from "astro:assets";
import TextureFilter from "../TextureFilter.astro";
const { src, alt="", reverse } = Astro.props

---

<div class="article">
    <slot/>
    {
        !!src && <TextureFilter src={src} alt={alt} />
    }
</div>

<style>
    h1 {
        font-size: small;
    }

    article {
        display: flex;
        flex-direction: row;
    }
</style>