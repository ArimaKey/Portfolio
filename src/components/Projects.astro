---
import first_project from '../resources/images/peertok.png'
import second_project from '../resources/images/soon_proyect_0.gif'
import third_project from '../resources/images/soon_proyect_1.gif'
import TextureFilter from "./TextureFilter.astro"
---
<section class="proyects">
    <h3 class="proyects__title">
        Projects
    </h3>
    <div class="proyects_content">
        <article class="proyect_content_element proyect_content_element--first">
            <div class=" proyect_content_element__image">
                <TextureFilter src={first_project}/>
            </div>
            <div>
                <h4 class="proyect_content_element__title">Peertok</h4>
            </div>
            <div class="proyect_content_element__more">
                
            </div>
        </article>
        <article class="proyect_content_element proyect_content_element--second">
            <div class=" proyect_content_element__image">
                <TextureFilter src={second_project}/>
            </div>
            <h4 class="proyect_content_element__title">SOON</h4>
        </article>
        <article class="proyect_content_element proyect_content_element--third">
            <div class=" proyect_content_element__image">
                <TextureFilter src={third_project}/>
            </div>
            <h4 class="proyect_content_element__title">SOON</h4>
        </article>
    </div>
</section>

<style>
    .proyects__title {
        margin-bottom: 0rem;
        width: 100%;
        color: var(--contrast-text);
        background-color: var(--primary-color);
        text-align: center;
        font-size: 1rem;
        padding: 0.5rem 0rem;
    }

    .proyects_content {
        width: 100%;
        
        display: grid;
        grid-template-columns: 100%;
        grid-template-rows: 40% 35% 25%;
        gap: 1rem;
        justify-items: stretch;
        align-items: stretch;
        
        height: 60rem;
    }

    .large__button--glow {
        box-shadow: 0 0 20px var(--glow-color);
        width: 14rem;
        transition: opacity 0.25s ease-out;
        opacity: 0;
    }

    .proyect_content_element:hover .large__button--glow {
        display: flex;
        opacity: 100;
    }

    .proyect_content_element {
        position: relative;
        overflow: hidden;
    }

    .proyect_content_element__image{
        width: 100%;
        height: 100%;
        overflow: hidden;
        background-color: black;
        transition: all 0.25s ease-out;
    }

    .proyect_content_element:hover .proyect_content_element__image {
        filter: brightness(0.8);
        transform: scale(1.05);
    }

    .proyect_content_element__title {
        position: absolute;
        bottom: 1rem;
        right: 1rem;
        color: var(--contrast-text);
        font-family: "Libre Barcode 39 Text", system-ui;
        font-size: 3rem;
        font-weight: 500;
        font-style: normal;
        text-shadow: 0 0 10px var(--glow-color);
        transition: all 0.25s ease-out;
    }
    
    .proyect_content_element__more {
        z-index: 5;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        
        justify-content: center;
        align-items: center;
    }

    @media only screen and (min-width: 480px) {
        .proyects__title {
            font-size: 1.5rem;
        }
    }

    @media only screen and (min-width: 768px) {
        .proyects__title {
            font-size: 1.5rem;
            padding: 1rem 0rem;
        }
        .proyects_content {
            width: calc(100% - 0.15rem);
            grid-template-columns: 50% 50%;
            grid-template-rows: 55% 45%;
            gap: 0.2rem;
            justify-items: stretch;
            align-items: stretch;
            height: 35rem;
        }
        .proyect_content_element--first {
            grid-row: span 2;
        }
    }
</style>