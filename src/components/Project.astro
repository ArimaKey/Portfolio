---
import TextureFilter from "./TextureFilter.astro";
const { image, title="soon", slug="projects", page, github } = Astro.props;    
---

<article class="proyect_content_element">
    <a href={slug}>
        <div class=" proyect_content_element__image">
            <TextureFilter src={image} transition=`projects-${title}`/>
        </div>
        <div>
            <h4 class="proyect_content_element__title">{ title }</h4>
        </div>
    </a>
</article>

<style>
    
    .proyect_content_element:hover .large__button--glow {
        display: flex;
        opacity: 100;
    }

    .proyect_content_element {
        position: relative;
        overflow: hidden;
        height: 100%;
        width: 100%;
    }

    .proyect_content_element__image{
        width: 100%;
        height: 100%;
        overflow: hidden;
        background-color: var(--secundary-color);
        transition: all 0.25s ease-out;
    }

    .proyect_content_element:hover .proyect_content_element__image {
        filter: brightness(0.8);
    }

    .proyect_content_element__title {
        position: absolute;
        bottom: 1rem;
        right: 1rem;
        color: var(--contrast-text);
        font-family: "Libre Barcode 39 Text", system-ui;
        font-size: 3rem;
        font-weight: 500;
        font-style: normal;
        text-shadow: 0 0 10px var(--glow-color);
        transition: all 0.25s ease-out;
    }
    
    .proyect_content_element__more {
        z-index: 5;
        width: 100%;
        height: 100%;
        position: absolute;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        gap: 1rem;
        
        justify-content: center;
        align-items: center;
    }
    @media only screen and (min-width: 768px) {
        .proyect_content_element:first-child {
            grid-row: span 3;   
        }
    }
</style>